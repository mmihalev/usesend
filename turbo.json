{
  "$schema": "https://turbo.build/schema.json",
  "globalDependencies": [
    "**/.env.*local"
  ],
  "tasks": {
    "build": {
      "dependsOn": [
        "^build",
        "db:generate"
      ],
      "outputs": [
        "dist/**",
        ".next/**",
        "!.next/cache/**"
      ],
      "env": [
        "DATABASE_URL",
        "REDIS_URL",
        "NEXTAUTH_URL",
        "GITHUB_ID",
        "GITHUB_SECRET",
        "AWS_SECRET_KEY",
        "AWS_ACCESS_KEY",
        "AWS_DEFAULT_REGION",
        "AWS_SES_ENDPOINT",
        "AWS_SNS_ENDPOINT",
        "NEXTAUTH_SECRET",
        "NODE_ENV",
        "VERCEL_URL",
        "VERCEL",
        "SKIP_ENV_VALIDATION",
        "PORT",
        "UNSEND_API_KEY",
        "USESEND_API_KEY",
        "GOOGLE_CLIENT_ID",
        "GOOGLE_CLIENT_SECRET",
        "NEXT_PUBLIC_IS_CLOUD",
        "S3_COMPATIBLE_ACCESS_KEY",
        "S3_COMPATIBLE_SECRET_KEY",
        "S3_COMPATIBLE_API_URL",
        "S3_COMPATIBLE_PUBLIC_URL",
        "S3_COMPATIBLE_BUCKET",
        "FROM_EMAIL",
        "ADMIN_EMAIL",
        "FOUNDER_EMAIL",
        "DISCORD_WEBHOOK_URL",
        "STRIPE_SECRET_KEY",
        "STRIPE_BASIC_PRICE_ID",
        "STRIPE_BASIC_USAGE_PRICE_ID",
        "STRIPE_LEGACY_BASIC_PRICE_ID",
        "STRIPE_WEBHOOK_SECRET",
        "SMTP_HOST",
        "SMTP_USER",
        "API_RATE_LIMIT",
        "AUTH_EMAIL_RATE_LIMIT",
        "USESEND_DKIM_SELECTOR",
        "USESEND_META_TITLE",
        "USESEND_META_DESCRIPTION",
        "USESEND_META_ICON",
        "USESEND_APP_NAME",
        "USESEND_DOCS_URL",
        "USESEND_BASE_URL",
        "SUPPORT_EMAIL"
      ]
    },
    "lint": {
      "dependsOn": [
        "^lint"
      ]
    },
    "dev": {
      "cache": false,
      "persistent": true,
      "dependsOn": [
        "db:generate"
      ]
    },
    "db:generate": {
      "cache": false
    },
    "db:push": {
      "cache": false
    }
  }
}